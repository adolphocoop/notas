<div class="container">
<div class="row">
    {{#each notas}}
    <div class="col-md-4">
        <div class="card text-dark bg-light border-secondary mb-3">
            <div class="card-header bg-primary d-flex justify-content-between">
                <p class="card-title fs-4">
                    {{titulo}}
                    <a href="/notes/edit:{{_id}}">
                        <i class="fas fa-edit ms-3 text-dark"></i>
                    </a>
                    <a href="/notes/delete:{{_id}}">
                        <i class="fas fa-trash ms-3 text-dark"></i>
                    </a>
                </p>
            </div>
            <div class="card-body">
                <p>{{descripcion}}</p>
                {{!-- <button class="btn btn-danger btn-block btn-sm">Eliminar</button> --}}
            </div>
        </div>
    </div>

    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h1>Hola {{ usuario.nombre}}</h1>
            <p class="lead">No hay notas en la base de datos.</p>
            <a href="/notes/add" class="btn btn-success btn-block">Crear nueva nota!</a>
        </div>
    </div>
    {{/each}}
</div>
<div class="row">
    {{#if pages}}
    <nav class="mx-auto">
        <ul class="pagination">
            {{!-- PRIMERA PAGINA --}}
            {{#equal current 1}}
            <li class="page-item disabled mr-1">
                <a href="#" class="page-link">Inicio</a>
            </li>
            {{else}}
            <li class="page-item mr-1">
                <a href="/notes/1" class="page-link">Inicio</a>
            </li>
            {{/equal}}
            
            {{!-- PAGINAS INTERNAS --}}
            {{#for current pages}}
                {{{this}}}
            {{/for}}

            {{!-- ULTIMA PAGINA --}}
            {{#equal current pages}}
            <li class="page-item disabled">
                <a href="#" class="page-link">Fin</a>
            </li>
            {{else}}
            <li class="page-item">
                <a href="/notes/{{pages}}" class="page-link">Fin</a>
            </li>
            {{/equal}}

        </ul>
    </nav>
    {{/if}}
    {{!-- {{current}}<br>
    {{pages}} --}}
</div>
</div>