<div class="col-md-6 mx-auto">
    <div class="card border-success">
        <div class="card-header bg-primary">
            <h3>Nueva Nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
            <div class="form-group mb-3">
                <input type="text" name="titulo" class="form-control" placeholder="Titulo" autofocus="" value="{{titulo}}">
            </div>
            <div class="form-group mb-3">
                <textarea name="descripcion" class="form-control" placeholder="Descripcion" >{{descripcion}}</textarea>

            </div>
            <div class="form-group d-grid gap-2">
                <button class="btn btn-outline-primary text-wrap" type="submit">
                    Guardar
                </button>

            </div>
            </form>
        </div>
    </div>
</div>